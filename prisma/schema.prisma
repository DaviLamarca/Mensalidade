generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Pode trocar para "postgresql" ou "mysql" se quiser depois
  url      = env("DATABASE_URL")
}

model Mensalidade {
  id         Int      @id @default(autoincrement())
  descricao  String
  valor      Float
  vencimento DateTime
  pago       Boolean  @default(false)
  criadoEm   DateTime @default(now())
}
